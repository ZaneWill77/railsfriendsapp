
<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>

  </p>
  <br/>

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
  <br/><br/>
<%= button_to 'Delete', @friend, class: "btn btn-outline-danger btn-sm", method: :delete, form: {data: {turbo_confirm: "Are you sure?" }} %>
   <br/>
<%= link_to 'Back', friends_path, class:"btn btn-dark" %>

</div>